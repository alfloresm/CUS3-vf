@model IEnumerable<CUS3_V4.Models.TTanda>

@{
    ViewData["Title"] = "Buscar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CALIFICAR</h2>

<div class="container">
    <div class="row ">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                <label class="text-center text-dark font-weight-bold" for="name">Tanda</label>
                <select class="col-lg-12 col-md-12 col-sm-12 form-control" id="tandaa">
                    <option selected>Seleccione</option>
                </select>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12" style="width : 20% ; margin: 15px 0px 50px 65px">
            <div class="form-group">
                <button onclick="getlistpuntajes(true)" , class="btn btn-dark text-danger" style="margin: 0px 0px 0px 280px"><span class="glyphicon glyphicon-search"></span> Buscar</button>
            </div>
        </div>

    </div>
</div>

<table class="table" hidden="hidden">
    <thead>
        <tr>
            <th>
                Tanda
            </th>
            <th>
                Modalidad
            </th>
            <th>
                Categoria
            </th>
            <th>
                Tipo Tanda
            </th>
            <th>
                Acion
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PkItCodTan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VtDescripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VtDescripcion1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VtTipoTanda)
                </td>
                <td>
                    @if (item.ItEstado == 1)
                    {
                        @*<a asp-action="Edit" asp-route-id="@item.PkItCodTan">Edit</a> |*@
                        @*<a asp-action="Details" asp-route-id="@item.PkItCodTan">Details</a> |*@
                        @*<a asp-action="Delete" asp-route-id="@item.PkItCodTan">Delete</a>*@
                        <a asp-action="BuscarT" asp-route-id="@item.PkItCodTan" class="btn btn-block btn-info glyphicon glyphicon-check">Calificar</a>
                    }
                    else
                    {
                        <p class="text-center text-primary">YA CALIFICADO!</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body" align="center">
                <table id="table-listar-tandas"></table>
                <div id="pager-listar-tandas"></div>
            </div>
        </div>
    </div>
</div>
